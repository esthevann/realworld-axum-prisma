datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    
}

generator client {
    // Corresponds to the cargo alias created earlier
    provider = "cargo prisma"
    // The location to generate the client. Is relative to the position of the schema
    output   = "../src/db/prisma.rs"
    module_path = "db::prisma"
}

model User {
    id          String    @id @default(cuid())
    username    String    @unique
    image       String    @default("")
    bio         String    @default("")
    email       String    @unique
    password    String
    createdAt   DateTime  @default(now())
    articles    Article[] @relation("UserArticles")
    follows     User[]    @relation("follows")
    favorites   Article[] @relation("UserFavorites")
    UserFollows User?     @relation("follows", fields: [userId], references: [id])
    userId      String?
}

model Article {
    id          String   @id @default(cuid())
    slug        String   @unique
    title       String
    description String
    body        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    tagList     String[]
    userId      String
    User        User     @relation(fields: [userId], references: [id], "UserArticles")
    favorites   User[]   @relation("UserFavorites")
}
